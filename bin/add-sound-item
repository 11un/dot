#!/usr/bin/env bash

## Name: add-sound-item
## Created: Sun Feb 16 11:39:34 PST 2020
## Updated: Mon Apr 13 09:35:11 PDT 2020 (Add verbose prompt, yellow color.)
## Description: Quick append entry to sound note.

add_sound_item() {

  local grn='\033[0;32m'
  local yel='\033[0;33m'
  local def='\033[0m'

  local dir="$HOME/Projects/notebook/sound.md"

  printf "${yel}%s${def}%s${yel}%s${def}%s" '[∅] ' 'Enter ' '"<artist-name>: <song-title>"' ': '
  read -r entry

  echo "- $entry" >> "$dir"
  printf "${grn}%s${def}%s${grn}%s${def}%s\n" '[∅] ' 'Added: ' "[$entry] " "to $dir"

}

add_sound_item
