#!/usr/bin/env bash

## Name: dl-youtube-mp3
## Created: 2020.02.22
## Description: Quick download youtube video as mp3.

dl_youtube_mp3() {

  local grn='\033[0;32m'
  local def='\033[0m'

  local dir="$HOME/Music/"

  echo
  printf "${grn}%s${def}%s" "[âˆ…] " "URL: "
  read -r entry
  echo

  youtube-dl --extract-audio --audio-format mp3 -o "$dir%(title)s.%(ext)s" "$entry"

}

dl_youtube_mp3
